# Futu API Configuration
FUTU_HOST=127.0.0.1
FUTU_PORT=11111
FUTU_QUOTE_CTX_TIMEOUT=15

# Database Configuration (TimescaleDB/PostgreSQL)
# Option 1: Individual settings
DATABASE_HOST=timescaledb
DATABASE_PORT=5432
DATABASE_NAME=futu_helper
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_POOL_MIN_SIZE=5
DATABASE_POOL_MAX_SIZE=20

# Option 2: Connection URL (overrides individual settings)
# DATABASE_URL=postgresql://postgres:your_secure_password_here@timescaledb:5432/futu_helper

# WebSocket Middleware Configuration
WEBSOCKET_PORT=8002
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here

# Application Configuration
APP_NAME=futu_helper
APP_ENVIRONMENT=production
LOG_LEVEL=INFO

# External API Configuration
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRY_ATTEMPTS=3

# Monitoring Configuration
MONITORING_INTERVAL=60
ALERT_CHECK_INTERVAL=30

# Docker-specific settings
# Uncomment and modify as needed for your Docker setup
# COMPOSE_PROJECT_NAME=futu_helper
# DOCKER_NETWORK_NAME=futu_helper_network
